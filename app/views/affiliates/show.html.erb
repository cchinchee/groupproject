<%= render partial: "/layouts/navbar" %>

<div class="row">
		<div class="col-md-6">
			<div class="userinfosection">
				<div><%= image_tag("userprofile.jpg",class:"userprofilepicture")%></div>
				<div class="userprofileinfopart">
					<h1><%= current_affiliate.first_name.upcase %> <%= current_affiliate.last_name.upcase %></h1>
					<h6>I am a passionate 26 years old male who are keen to contribute back to society.</h6>
				</div>
			</div>
		</div>
		<div class="col-md-6">
			<div class="usercontactsection">
				<h4 class="usercontactsectionemail"><%= image_tag("002-email.png")%><%= current_affiliate.email %></h4>
				<h4><%= image_tag("001-home.png") %><%= current_affiliate.address %>, <%= current_affiliate.postcode %>, <%= current_affiliate.city %>, <%= current_affiliate.state %>.</h4>
				<ul class="usercontactsectionul">
					<li><h4><%= @job.count %></br>Completed Job</h4></li>
					<li><h4>RM 00000</br>Saving</h4></li>
				</ul>
			</div>
		</div>
	</div>

	<div>
		<h3 class="">Completed Training Course</h3>
		<ul class="">
	    	<li class="">Professional Cleaning Services</li>
	    	<li class="">Cooking Class - Western food</li>
	    	<% if affiliate_signed_in? %>
	    		<li class=""><%= button_to "Training Portal", "/training_courses", method: :get %></li>
			<% end  %>
	  	</ul>
	</div>

	<div>
		<% if affiliate_signed_in? %>
			<h3 class="showpage-title">Upcoming Job</h3>
			<% @requested = @job.where(status: "1") %>
			<% @requested.each do |t| %>
			  <%= link_to job_path(t.id) do %>
			  <div class="thumbnail jobstyle">
			    <%= image_tag("cooking.jpg", class:"thumnail-image")%>
			    <div class="caption">
			      <h5><%= t.start_date.strftime("%d %b %Y") %>, <%= t.start_time.strftime("%l.%M %P") %></h5>
			      <h5><%= t.category %></h5>
			      <h5>RM <%= t.price %></h5>
			      <h5><%= t.status %> by <%= link_to "t.affiliate.first_name" %></h5>
			    </div>
			  </div>
			  <% end %>
			<% end %>
		<% else %>
			<h3 class="showpage-title">Completed Job</h3>
			<% @requested = @job.where(status: "2") %>
			<% @requested.each do |t| %>
			  <%= link_to job_path(t.id) do %>
			  <div class="thumbnail jobstyle">
			    <%= image_tag("cooking.jpg", class:"thumnail-image")%>
			    <div class="caption">
			      <h5><%= t.start_date.strftime("%d %b %Y") %>, <%= t.start_time.strftime("%l.%M %P") %></h5>
			      <h5><%= t.category %></h5>
			    </div>
			  </div>
			  <% end %>
			<% end %>
		<% end %>

	</div>
	<div>
		<h3 class="showpage-title">Reviews</h3>
		<h5>Reviews from User</h5>
		<div class="review row"></div>
		<% @requested = @job.where(status: "2")  %>
		<% @requested.each do |t| %>
			<div class="col-md-2">
				<%= image_tag("userprofile.jpg",class:"thumbnail-review")%>
				<p style="padding-left: 30px;">Kelvin</p>
			</div>
			<div class="col-md-8">
				<p>Provided a very good service, he is a hard working person.</p>
				<br>
				<p>For <%= t.category %>, <%= t.start_date.strftime("%d %b %Y") %></p>
				<br>
				
				<hr>
			</div>
		</div>
		
		<% end %>
	</div>


<%= render partial: "/layouts/footer" %>