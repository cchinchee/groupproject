<%= form_for Job.new, url: jobs_path do |form| %>

   <!--  <div class="text-field form-group">
        <%# form.hidden_field :name, placeholder: 'Name', class:"form-control"%>
    </div> -->

    <%= form.hidden_field :name, value: current_user.first_name%>
    
    <% category = ["Cleaning Service", "Catering Service", "Mobile and Laptop Repair", "Home Maintenance", "Movers", "Plumbing Service"] %>

    <div class="choose-service row">
        <%= button_to "Catering", nil, class: "jobimage chooseThis", style: "background:url('../assets/catering.jpg'); height: 200px; width: 200px; background-repeat: no-repeat; background-position: center; background-size: cover; border-radius: 50%; box-sizing: border-box; font-size: 0px" %>
        <%= button_to "Cleaning", nil, class: "jobimage", style: "background:url('../assets/cleaningservice.jpg'); height: 200px; width: 200px; background-repeat: no-repeat; background-position: center; background-size: cover; border-radius: 50%; box-sizing: border-box; font-size: 0px" %>
        <%= button_to "Mover", nil, class: "jobimage", style: "background:url('../assets/mover.jpg'); height: 200px; width: 200px; background-repeat: no-repeat; background-position: center; background-size: cover; border-radius: 50%; box-sizing: border-box; font-size: 0px" %>
        <%= button_to "Plumbing", nil, class: "jobimage", style: "background:url('../assets/plumbing.png'); height: 200px; width: 200px; background-repeat: no-repeat; background-position: center; background-size: cover; border-radius: 50%; box-sizing: border-box; font-size: 0px" %>
        <%= button_to "Gadget Repair", nil, class: "jobimage", style: "background:url('../assets/gadgetservice.jpg'); height: 200px; width: 200px; background-repeat: no-repeat; background-position: center; background-size: cover; border-radius: 50%; box-sizing: border-box; font-size: 0px" %>
    </div>
    
    <div class="service-container row">
      <div class="description-price">
        <h4 class="text-center">Catering</h4>
        <h4 class="text-center">RM100 per service</h4></div>
      <div class="description-price">
        <h4 class="text-center">Cleaning</h4>
        <h4 class="text-center">RM80 per service</h4></div>
      <div class="description-price">
        <h4 class="text-center">Mover</h4>
        <h4 class="text-center">RM70 per service</h4></div>
      <div class="description-price">
        <h4 class="text-center">Plumbing</h4>
        <h4 class="text-center">RM60 per service</h4></div>
      <div class="description-price">
        <h4 class="text-center">Gadget Repair</h4>
        <h4 class="text-center">RM150 per service</h4></div>
    </div>

    <%= form.hidden_field :category%>
    <%= form.hidden_field :price%>

    <div class="text-field form-group">
        <%= form.date_field :start_date, placeholder: 'Start Date', class: "form-control"%>
    </div>
    
    <div class="text-field form-group">
        <%= form.time_field :start_time, placeholder: 'Start Time', class: "form-control"%>
    </div>

    
    <div class="text-field form-group">
        <%= form.text_field :address, placeholder: 'Address', class: "form-control"%>
    </div>
    
    <div class="select-field form-group">
        <% states = [] %>
        <% CS.states(:my).each do |x, y| states << y.to_s end %>
        <%= form.select :state, options_for_select(states, "Johor"), class: "form-control"%>
    </div>
    
    <div class="select-field form-group", id="show-city-job", style="display: none">
        <% city = [] %>
        <%= form.select :city, options_for_select(city) , class: "form-control"%>
    </div>

    <div class="text-field form-group">
        <%= form.text_field :postcode, placeholder: 'Postcode', class: "form-control"%>
    </div>  
    
    <div class="text-field form-group">
        <%= form.text_field :description, placeholder: 'Description', class: "form-control"%>
    </div>

    <div class="form-group">
      <%= form.submit "Post a job", class: "text-field btn-submit form-control" %>
    </div>
    
   <% end %>