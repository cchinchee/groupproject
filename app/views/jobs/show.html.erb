<script src="//maps.google.com/maps/api/js?key=[your API key]"></script>
<script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
<script src='//cdn.rawgit.com/printercu/google-maps-utility-library-v3-read-only/master/infobox/src/infobox_packed.js' type='text/javascript'></script> <!-- only if you need custom infoboxes -->

<%= render partial: "/layouts/navbar" %>

<div class="container">
	<div class="col-md-7 sectionstyle leftsectionstyle leftsection">
		<h1 id="jobName"><%= @job.name %></h1>
		<h2>Category</h2>
		<h4>· <%= @job.category %></h4>
		<div class="timedatesection">
			<div>
				<h2>Date</h2>
				<h4>· <%= @job.start_date %></h4>
			</div>
			<div>
				<h2>Time</h2>
				<h4>· <%= @job.start_time.strftime("%H:%M") %></h4>
			</div>
		</div>
		<h2>Price</h2>
		<h4>· <%= @job.price %></h4>
		<h2>Address</h2>
		<h4>· <%= @job.address %>,<%= @job.city %>,<%= @job.state %></h4>
		<h2>Postcode</h2>
		<h4>· <%= @job.postcode %></h4>
	</div>
	<div class="col-md-1"></div>
	<div class="col-md-4 sectionstyle rightsectionstyle">
		<div style='width: 800px;'>
  			<div id="map" style='width: 800px; height: 400px;'>
  			</div>
		</div>
		<h2>Accept the job now </h2>
		<%= button_to "Reserve", "/" %>
	</div>
</div>

<script type="text/javascript">
	handler = Gmaps.build('Google');
	handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
  	markers = handler.addMarkers([
    {
      	"lat": 0,
      	"lng": 0,
      	"picture": {
        	"url": "http://people.mozilla.com/~faaborg/files/shiretoko/firefoxIcon/firefox-32.png",
        	"width":  32,
        	"height": 32
      	},
      	"infowindow": "hello!"
    	}
  	]);
  	handler.bounds.extendWith(markers);
  	handler.fitMapToBounds();
	});
</script>