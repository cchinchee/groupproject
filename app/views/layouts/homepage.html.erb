<%= render partial: "/layouts/navbar" %>

<style type="text/css">
	.carousel-inner img {
  margin: auto;
}
</style>
<div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
  <!-- Indicators -->
  <ol class="carousel-indicators">
    <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
    <li data-target="#carousel-example-generic" data-slide-to="1"></li>
    <li data-target="#carousel-example-generic" data-slide-to="2"></li>
  </ol>
 
  <!-- Wrapper for slides -->
  <div class="carousel-inner">
    <div class="item active">
      <%= image_tag ("picture1.jpg") %>
      <div class="carousel-caption">
      	<h1 class="sectionword">PARTNERSHIP · SECURITY </h1>
      </div>
    </div>
    <div class="item">
      <%= image_tag ("picture2.jpg") %>
      <div class="carousel-caption">
      	<h1 class="sectionheader">TRAINING · FUTURE</h1>
      </div>
    </div>
    <div class="item">
      <%= image_tag ("picture3.jpg") %>
      <div class="carousel-caption">
      	<h1 class="sectionheader">CONTRIBUTE · SOCIETY</h1>
      </div>
    </div>
  </div>
 
  <!-- Controls -->
  <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left"></span>
  </a>
  <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right"></span>
  </a>
</div>

<div id="guide_container">
	<div>
		<h1 class="sectionheader">A GUIDE TO START </h1>
	</div>
	<div class="button">
		<%= button_to "CLICK FOR MORE", "/", class:"buttonstyle" %>
	</div>
</div>

<div class='container' id="homepagecontainer">
  <h1 id="latestjobheader">Latest Job</h1>
  <br>
  <% @job.each do |t| %>
    <%= link_to job_path(t.id) do %>
    <div class="thumbnail jobstyle">
      <%= image_tag("cooking.jpg", class:"thumnail-image")%>
      <div class="caption">
        <h3><%= t.name %></h3>
        <h5><%= t.category %></h5>
        <h5>RM <%= t.price %></h5>
      </div>
    </div>
    <% end %>
  <% end %>
  <div id='paginate'>
    <div class='container'><%= paginate @job ,window: 2%></div>
  </div>
</div>

<div class="joinusbutton">
  <% if signed_in? %>
    <%= button_to "JOIN US", "/", class:"joinusbuttonstyle" %>
  <% end %>
</div>

<%= render partial: "/layouts/footer" %>

